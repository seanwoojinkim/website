# Dockerfile for portfolio with Claude Code
# Stack: static
# Generated by claude-docker-template

FROM node:20-bookworm

# Install Claude Code CLI (global npm install)
RUN npm install -g @anthropic-ai/claude-code

# Install development tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    netcat-openbsd \
    sudo \
    gosu \
    && rm -rf /var/lib/apt/lists/*

# Configure git safe directory
RUN git config --global --add safe.directory /workspace

# Set working directory
WORKDIR /workspace

# Copy package files for caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy and set up entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Change ownership to non-root user
RUN chown -R node:node /workspace /home/node

# Expose port
EXPOSE 8000

# Use entrypoint to fix permissions and switch to non-root user
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Default command
CMD ["/bin/bash"]
